{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "mock-server-config",
   "type":"object",
   "properties": {
      "serverPort": {
        "type": "integer",
        "default": 3000,
        "description": "the mock-server web server and http(s) port default is 3000"
      },
      "wsServerPort": {
        "type": "integer",
        "default": 3001,
        "description": "web socket port used for server push message default is 3001"
      },
      "mockDir": {
        "type": "string",
        "default": "mock",
        "description": "the folder to store mock file and config default is ./mock"
      },
      "https": {
        "type": "boolean",
        "default": false,
        "description": "is use https default is false"
      },
      "proxy": {
        "type": "object",
        "patternProperties": {
          "^[a-zA-Z0-9_/]": {
            "type": "object",
            "properties": {
              "target": {
                "type": "string",
                "description": "the target url"
              },
              "changeOrigin": {
                "type": "boolean",
                "default": true,
                "description": "change the origin of the host header to the target URL"
              },
              "deletePrefix": {
                "type": "boolean",
                "default": true
              }
            },
            "required": ["target"],
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      "assetsManageWithGit": {
        "type": "boolean",
        "default": false,
        "description": "is use git to manage assets default is false"
      }
   }
}